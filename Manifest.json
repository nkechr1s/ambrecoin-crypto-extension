{
    "manifest_version": 2,
    "name": "Ambrecoin crypto extension",
    "description": "Discover prices of crypto faster than ever!",
    "version": "1.0",
    "background":{
      "scripts": ["background.js"]
    },
    "permissions": [
      "tabs",
      "bookmarks",
      "activeTab",
      "contextMenus",
      "storage",
    "http://*.google.com/"
    ],
    "host_permissions": [
        "https://api.coingecko.com/"
      ],
    "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "window.html"
    }
    }